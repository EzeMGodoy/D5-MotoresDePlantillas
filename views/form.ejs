<%- include('partials/CDN-Header') %>
  <title>Formulario</title>
  </head>
  <body>
    <main class="container mt-5 pt-5 pb-5">
      <div class="text-center mb-5">
        <h1>En el siguiente formulario puedes agregar un producto</h1>
      </div>

      <form action="<%= detailUrlBase %>/api/productos" method="post"
        class="row g-3 flex-column was-validated justify-content-center align-items-center mt-5">
        <div class="form-floating col-md-4">
          <input type="text" class="form-control" id="floatingTitle" placeholder="Nombre" name="title" required>
          <label for="floatingTitle">Nombre</label>
        </div>
        <div class="form-floating col-md-4">
          <input type="number" class="form-control" id="floatingPrice" placeholder="Precio" name="price" required>
          <label for="floatingPrice">Precio</label>
        </div>
        <div class="form-floating col-md-4">
          <input type="text" class="form-control" id="floatingImg" placeholder="imagen" name="thumbnail" required>
          <label for="floatingImg">Link del producto</label>
        </div>
        <div class="row justify-content-md-center mt-4">
          <div class="col-1  ">
            <button class="btn btn-success" type="submit">Enviar</button>
          </div>
        </div>
      </form>
      </div>
      <div class=" mt-4 text-center  row justify-content-md-center">
        <div class="col-1r">
          <a class="btn btn-info me-4" href="<%= detailUrlBase %>/productos">Ir a los productos </a>
        </div>
      </div>
